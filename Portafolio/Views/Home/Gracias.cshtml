@{
    ViewData["Title"] = "¡Gracias por contactarme!";
}

@section Styles {
    <link rel="stylesheet" href="~/css/gracias.css" asp-append-version="true" />
}

<div class="container">
    <div class="text-center" style="padding: 80px 20px;">
        <div class="gracias-container">
            <div class="check-icon-container">
                <i class="bi bi-check-circle-fill"></i>
            </div>

            <h1 class="gracias-titulo">¡Mensaje Enviado!</h1>

            <p class="gracias-texto">
                Gracias por contactarme. He recibido tu mensaje y te responderé lo antes posible.
            </p>

            <p class="gracias-subtexto">
                Generalmente respondo en menos de 24 horas.
            </p>

            <div class="gracias-botones">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-fill me-2"></i>Volver al Inicio
                </a>
                <a asp-controller="Home" asp-action="Proyectos" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-briefcase-fill me-2"></i>Ver Proyectos
                </a>
            </div>
        </div>
    </div>
</div>
