<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portafolio de Josue Aaron - Desarrollador Full Stack especializado en .NET, ASP.NET Core, Entity Framework y SQL Server" />
    <meta name="keywords" content="Desarrollador .NET, ASP.NET Core, Full Stack, C#, SQL Server, Entity Framework" />
    <meta name="author" content="Josue Aaron" />

    <title>@ViewData["Title"] - Josue Aaron Portfolio</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- ARCHIVO CSS PERSONALIZADO (debe ir DESPUÉS de Bootstrap) -->
    <link rel="stylesheet" href="~/css/portfolio.css" asp-append-version="true" />

    <!-- Sección para estilos adicionales de páginas específicas -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- NAVBAR (opcional, puedes personalizarlo) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-code-square me-2"></i>
                    Josue Aaron
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Proyectos">Proyectos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contacto">Contacto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO PRINCIPAL -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>Josue Aaron</h5>
                    <p class="text-muted">Desarrollador Full Stack .NET</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Enlaces</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a href="https://github.com/JosueJoestar22"
                               target="_blank"
                               rel="noopener noreferrer"
                               class="text-muted text-decoration-none">GitHub</a>
                        </li>
                        <li>
                            <a href="https://www.linkedin.com/in/josue-carcamo-vilchez/"
                               target="_blank"
                               rel="noopener noreferrer"
                               class="text-muted text-decoration-none">LinkedIn</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contacto</h5>
                    <p class="text-muted">
                        <i class="bi bi-envelope-fill me-2"></i>josuejoestar2210@gmail.com
                    </p>
                </div>
            </div>
            <hr class="bg-secondary" />
            <p class="text-muted mb-0">
                &copy; @DateTime.Now.Year - Josue Aaron. Todos los derechos reservados.
            </p>
        </div>
    </footer>

    <!-- jQuery (si lo necesitas) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Bundle (incluye Popper) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ARCHIVO JAVASCRIPT PERSONALIZADO -->
    <script src="~/js/portfolio.js" asp-append-version="true"></script>

    <!-- Sección para scripts adicionales de páginas específicas -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
